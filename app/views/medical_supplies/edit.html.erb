<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <%= form_with(model: @medical_supply, local: true, id: "edit-medical-supply-form") do |form| %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Edit Supply</h1>
      <div class="d-flex gap-2">
        <%= form.submit "Save Supply", class: "btn btn-primary" %>
        <%= link_to "Back to Supplies", medical_supplies_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <%= render 'form', medical_supply: @medical_supply, form: form %>
  <% end %>
</div>