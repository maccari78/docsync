<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Secretaries</h1>
    <%= link_to 'New Secretary', new_secretary_path, class: 'btn btn-primary' %>
  </div>

  <% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Clinic</th>
        <th>Professionals</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @secretaries.each do |secretary| %>
        <tr>
          <td><%= "#{secretary.first_name} #{secretary.last_name}" %></td>
          <td><%= secretary.email %></td>
          <td><%= secretary.clinic&.name || "N/A" %></td>
          <td><%= secretary.professionals.any? ? secretary.professionals.map { |p| "#{p.user.first_name} #{p.user.last_name}" }.join(", ") : "None" %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to 'Show', secretary_path(secretary), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_secretary_path(secretary), class: 'btn btn-warning btn-sm' %>
              <%= button_to 'Delete', secretary_path(secretary), method: :delete, data: { turbo: false, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            <div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>