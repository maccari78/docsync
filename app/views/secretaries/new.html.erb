<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <%= form_with(model: @secretary, url: secretaries_path, local: true, id: "new-secretary-form") do |form| %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>New Secretary</h1>
      <div class="d-flex gap-2">
        <%= form.submit "Save Secretary", class: "btn btn-primary" %>
        <%= link_to "Back to Secretaries", secretaries_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <%= render 'form', secretary: @secretary, form: form %>
  <% end %>
</div>