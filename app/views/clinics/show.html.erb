<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Clinic Details</h1>
    <div class="d-flex gap-2">
      <%= link_to 'Edit Clinic', edit_clinic_path(@clinic), class: 'btn btn-warning' %>
      <% if admin? %>
        <%= button_to 'Delete Clinic', clinic_path(@clinic), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger" %>
      <% end %>
      <%= link_to 'Back to Clinics', clinics_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <p><strong>Name:</strong> <%= @clinic.name %></p>
  <p><strong>Address:</strong> <%= @clinic.address %></p>
</div>