<div class="container mt-5">
  <h1>Admin Dashboard</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Total Appointments</h5>
          <p class="card-text"><%= @total_appointments %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Total Patients</h5>
          <p class="card-text"><%= @total_patients %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Total Clinics</h5>
          <p class="card-text"><%= @total_clinics %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Total Professionals</h5>
          <p class="card-text"><%= @total_professionals %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Total Secretaries</h5>
          <p class="card-text"><%= @total_secretaries %></p>
        </div>
      </div>
    </div>
  </div>

  <h2>Appointments by Clinic</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Clinic</th>
        <th>Total Appointments</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments_by_clinic.each do |clinic_name, count| %>
        <tr>
          <td><%= clinic_name %></td>
          <td><%= count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>