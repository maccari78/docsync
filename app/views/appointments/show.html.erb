<div class="container mt-5">
  <h1>Appointment Details</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card mb-3">
    <div class="card-body">
      <p><strong>Patient:</strong> <%= @appointment.patient&.email || 'N/A' %></p>
      <p><strong>Professional:</strong> <%= @appointment.professional&.user&.email || 'N/A' %></p>
      <p><strong>Clinic:</strong> <%= @appointment.clinic&.name || 'N/A' %></p>
      <p><strong>Date:</strong> <%= @appointment.date %></p>
      <p><strong>Time:</strong> <%= @appointment.time %></p>
      <p><strong>Status:</strong> <%= @appointment.status.humanize.capitalize %></p>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2 mb-3">
    <%= link_to "Edit", edit_appointment_path(@appointment), class: "btn btn-warning" %>
    <%= button_to "Delete", 
      appointment_path(@appointment), 
      method: :delete, 
      form: { data: { turbo_confirm: "Are you sure?" } }, 
      class: "btn btn-danger" %>
    <%= link_to "Back to Appointments", appointments_path, class: "btn btn-secondary" %>
  </div>
</div>