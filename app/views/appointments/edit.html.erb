<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <%= form_with(model: @appointment, url: appointment_path(@appointment), class: 'needs-validation w-100', local: true, novalidate: true, id: "edit-appointment-form") do |form| %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Edit Appointment</h1>
      <div class="d-flex gap-2">
        <%= form.submit "Save Appointment", class: "btn btn-primary" %>
        <%= link_to "Back to Calendar", appointments_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <%= render 'form', form: form, appointment: @appointment %>
  <% end %>
</div>