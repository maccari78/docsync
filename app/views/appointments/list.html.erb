<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Appointments</h1>
    <%= will_paginate @appointments %>
    <div class="d-flex gap-2">
      <%= link_to "Deleted Appointments", deleted_appointments_path, class: "btn btn-secondary" %>
      <%= link_to 'Back to Calendar', appointments_path, class: "btn btn-secondary" %>
      <%= link_to "New Appointment", new_appointment_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="filter-wrapper px-0">
    <%= form_with url: list_appointments_path, method: :get, local: true, class: 'mb-3 filter-form' do |form| %>
      <div class="row g-3">
        <div class="col-md-2">
          <%= form.text_field :patient_name, value: params[:patient_name], class: 'form-control', placeholder: 'Search by Patient Name' %>
        </div>
        <div class="col-md-2">
          <%= form.date_field :date, value: params[:date], class: 'form-control' %>
        </div>
        <% if admin? || secretary? %>
          <div class="col-md-2">
            <%= form.collection_select :professional_id, Professional.all, :id, :user_name, { prompt: 'Filter by Professional' }, class: 'form-select' %>
          </div>
        <% end %>
        <% if admin? %>
          <div class="col-md-2">
            <%= form.collection_select :clinic_id, Clinic.all, :id, :name, { prompt: 'Filter by Clinic' }, class: 'form-select' %>
          </div>
        <% end %>
        <div class="col-md-2">
          <%= form.select :status, options_for_select(['pending', 'confirmed', 'cancelled'], params[:status]), { prompt: 'Filter by Status' }, class: 'form-select' %>
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <%= form.submit 'Filter', class: 'btn btn-primary me-2 w-100' %>
          <%= link_to 'Clear', list_appointments_path, class: 'btn btn-secondary w-100' %>
        </div>
      </div>
    <% end %>
  </div>  

  <% if @appointments.any? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Patient</th>
            <th>Professional</th>
            <th>Clinic</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.each do |appointment| %>
            <tr>
              <td><%= appointment.date %></td>
              <td><%= appointment.time.strftime('%H:%M') %></td>
              <td><%= appointment.patient&.name || 'N/A' %></td>
              <td><%= appointment.professional&.user&.name || 'N/A' %></td>
              <td><%= appointment.clinic&.name || 'N/A' %></td>
              <td><%= appointment.status.humanize.capitalize %></td>
              <td class="actions">
                <%= link_to 'Show', appointment_path(appointment), class: "btn btn-sm btn-info" %>
                <%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-sm btn-warning" %>
                <% if current_user.admin? || current_user.professional? || current_user.secretary? %>
                  <%= link_to 'Delete', appointment_path(appointment), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  <% else %>
    <p>No appointments found.</p>
  <% end %>
</div>