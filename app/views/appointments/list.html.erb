<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Appointments</h1>
    <%= will_paginate @appointments %>
    <div class="d-flex gap-2">
      <%= link_to "Deleted Appointments", deleted_appointments_path, class: "btn btn-secondary" %>
      <%= link_to 'Back to Calendar', appointments_path, class: "btn btn-secondary" %>
      <%= link_to "New Appointment", new_appointment_path, class: "btn btn-primary" %>
    </div>
  </div>

  <%= form_with url: list_appointments_path, method: :get, local: true, class: 'mb-3 filter-form' do |form| %>
    <div class="row g-3">
      <div class="col-md-3">
        <%= form.label :date, 'Filter by Date', class: 'form-label' %>
        <%= form.date_field :date, value: params[:date], class: 'form-control' %>
      </div>
      <% if admin? || secretary? %>
        <div class="col-md-3">
          <%= form.label :professional_id, 'Filter by Professional', class: 'form-label' %>
          <%= form.collection_select :professional_id, Professional.all, :id, :user_name, { prompt: 'Select a professional' }, class: 'form-select' %>
        </div>
      <% end %>
      <% if admin? %>
        <div class="col-md-3">
          <%= form.label :clinic_id, 'Filter by Clinic', class: 'form-label' %>
          <%= form.collection_select :clinic_id, Clinic.all, :id, :name, { prompt: 'Select a clinic' }, class: 'form-select' %>
        </div>
      <% end %>
      <div class="col-md-3">
        <%= form.label :status, 'Filter by Status', class: 'form-label' %>
        <%= form.select :status, options_for_select(['pending', 'confirmed', 'cancelled'], params[:status]), { prompt: 'Select a status' }, class: 'form-select' %>
      </div>
      <div class="col-md-3">
        <%= form.label :patient_name, 'Search by Patient Name', class: 'form-label' %>
        <%= form.text_field :patient_name, value: params[:patient_name], class: 'form-control', placeholder: 'Enter patient name...' %>
      </div>
      <div class="col-md-3 d-flex align-items-end">
        <%= form.submit 'Filter', class: 'btn btn-primary me-2' %>
        <%= link_to 'Clear Filters', list_appointments_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>

  <% if @appointments.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Patient</th>
          <th>Professional</th>
          <th>Clinic</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date %></td>
            <td><%= appointment.time.strftime('%H:%M') %></td>
            <td><%= appointment.patient&.name || 'N/A' %></td>
            <td><%= appointment.professional&.user&.name || 'N/A' %></td>
            <td><%= appointment.clinic&.name || 'N/A' %></td>
            <td><%= appointment.status.humanize.capitalize %></td>
            <td>
              <%= link_to 'Show', appointment_path(appointment), class: "btn btn-sm btn-info" %>
              <%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-sm btn-warning" %>
              <% if current_user.admin? || current_user.professional? || current_user.secretary? %>
                <%= link_to 'Delete', appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <% else %>
    <p>No appointments found.</p>
  <% end %>
</div>