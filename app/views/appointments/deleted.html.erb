<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Deleted Appointments</h1>
    <div class="d-flex gap-2 align-items-center">
      <%= will_paginate @deleted_appointments %>
    </div>
    <div class="d-flex gap-2">
      <%= link_to "Appointments List", list_appointments_path, class: "btn btn-secondary" %>
      <%= link_to 'Back to Calendar', appointments_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <% if @deleted_appointments.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Patient</th>
          <th>Professional</th>
          <th>Clinic</th>
          <th>Status</th>
          <th>Deleted At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @deleted_appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date %></td>
            <td><%= appointment.time.strftime('%H:%M') %></td>
            <td><%= appointment.patient&.name || 'N/A' %></td>
            <td><%= appointment.professional&.user&.name || 'N/A' %></td>
            <td><%= appointment.clinic&.name || 'N/A' %></td>
            <td><%= appointment.status.humanize.capitalize %></td>
            <td><%= l(appointment.deleted_at, format: :default) %></td>
            <td>
              <div class="d-flex gap-2">
                <%= button_to 'Restore', 
                              restore_appointment_path(appointment), 
                              method: :post, 
                              form: { data: { turbo_confirm: 'Are you sure you want to restore this appointment?' } }, 
                              class: "btn btn-sm btn-success" %>
                <%= button_to 'Permanently Delete', 
                              hard_destroy_appointment_path(appointment), 
                              method: :delete, 
                              form: { data: { turbo_confirm: 'Are you sure you want to permanently delete this appointment?' } }, 
                              class: "btn btn-sm btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No deleted appointments found.</p>
  <% end %>
</div>