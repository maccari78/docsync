<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Patients</h1>
    <%= link_to 'New Patient', new_patient_path, class: 'btn btn-primary' %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Professional</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.email %></td>
          <td><%= patient.phone %></td>
          <td><%= patient.professional.name if patient.professional %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to 'Show', patient_path(patient), class: "btn btn-info btn-sm" %>
              <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning btn-sm' %>
              <%= button_to 'Delete', patient_path(patient), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            <div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  
</div>