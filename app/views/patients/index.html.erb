<div class="container mt-5">
  <h1>Patients</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Professional</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.email %></td>
          <td><%= patient.phone %></td>
          <td><%= patient.professional.email if patient.professional %></td>
          <td>
            <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Delete', patient_path(patient), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Patient', new_patient_path, class: 'btn btn-primary' %>
</div>