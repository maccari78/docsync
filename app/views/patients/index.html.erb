<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Patients</h1>
    <%= will_paginate @patients %>
    <%= link_to 'New Patient', new_patient_path, class: 'btn btn-primary' %>
  </div>

  <!-- Formulario de filtros -->
  <%= form_with url: patients_path, method: :get, local: true, class: 'mb-3 filter-form' do |form| %>
    <div class="row g-3">
      <div class="col-md-4">
        <%= form.label :name, 'Search by Name', class: 'form-label' %>
        <%= form.text_field :name, value: params[:name], class: 'form-control', placeholder: 'Enter name...' %>
      </div>
      <% if admin? || secretary? %>
        <div class="col-md-4">
          <%= form.label :professional_id, 'Filter by Professional', class: 'form-label' %>
          <%= form.collection_select :professional_id, Professional.all, :user_id, :user_name, { prompt: 'Select a professional' }, class: 'form-select' %>
        </div>
      <% end %>
      <div class="col-md-4 d-flex align-items-end">
        <%= form.submit 'Filter', class: 'btn btn-primary me-2' %>
        <%= link_to 'Clear Filters', patients_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>

  <% if @patients.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Professional</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td><%= "#{patient.first_name} #{patient.last_name}" %></td>
            <td><%= patient.email %></td>
            <td><%= patient.phone %></td>
            <td><%= "#{patient.professional.first_name} #{patient.professional.last_name}" if patient.professional %></td>
            <td>
              <div class="d-flex gap-2">
                <%= link_to 'Show', patient_path(patient), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning btn-sm' %>
                <% if admin? %>
                  <%= button_to 'Delete', patient_path(patient), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <% else %>
    <p>No patients found.</p>
  <% end %>
</div>