<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Patient Details</h1>
    <div class="d-flex gap-2">
      <%= link_to 'Edit Patient', edit_patient_path(@patient), class: 'btn btn-warning' %>
      <%= link_to 'Back to Patients', patients_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <p><strong>Name:</strong> <%= "#{@patient.first_name} #{@patient.last_name}" %></p>
  <p><strong>Email:</strong> <%= @patient.email || "N/A" %></p>
  <p><strong>Phone:</strong> <%= @patient.phone || "N/A" %></p>
  <p><strong>Professional:</strong> <%= @patient.professional ? @patient.professional.name : "N/A" %></p>
  <p>
    <strong>Photo:</strong>
    <% if @patient.photo.attached? %>
      <%= cl_image_tag @patient.photo.key, width: 200, height: 200, crop: :fill, class: "img-thumbnail" %>
    <% else %>
      No photo available
    <% end %>
  </p>
</div>