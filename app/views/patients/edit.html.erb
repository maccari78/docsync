<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <%= form_with(model: @patient, url: patient_path(@patient), local: true, id: "edit-patient-form") do |form| %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Edit Patient</h1>
      <div class="d-flex gap-2">
        <%= form.submit "Save Patient", class: "btn btn-primary" %>
        <%= link_to "Back to Patients", patients_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <%= render 'form', patient: @patient, form: form %>
  <% end %>
</div>