<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <%= form_with(model: @professional, url: professionals_path, local: true, id: "new-professional-form") do |form| %>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>New Professional</h1>
      <div class="d-flex gap-2">
        <%= form.submit "Save Professional", class: "btn btn-primary" %>
        <%= link_to "Back to Professionals", professionals_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <%= render 'form', professional: @professional, form: form %>
  <% end %>
</div>