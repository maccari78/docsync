<div class="container-fluid mt-3 px-4 d-flex flex-column" style="min-height: 100vh;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Professional Details</h1>
    <div class="d-flex gap-2">
      <%= link_to 'Edit Professional', edit_professional_path(@professional), class: 'btn btn-warning' %>
      <% if admin? %>
        <%= button_to 'Delete Professional', professional_path(@professional), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger" %>
      <% end %>
      <%= link_to 'Back to Professionals', professionals_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <p><strong>Name:</strong> <%= "#{@professional.user.first_name} #{@professional.user.last_name}" %></p>
  <p><strong>Email:</strong> <%= @professional.user.email %></p>
  <p><strong>Specialty:</strong> <%= @professional.specialty&.humanize || "N/A" %></p>
  <p><strong>Clinic:</strong> <%= @professional.clinic&.name || "N/A" %></p>
  <p><strong>License Number:</strong> <%= @professional.license_number || "N/A" %></p>
</div>